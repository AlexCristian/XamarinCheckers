            <Button Grid.Column="6"  Grid.Row="1" ></Button>
            <Button Text="C" TextColor="Red" Grid.Column="7"  Grid.Row="1"  Clicked="ClickedGrid"></Button>

            <Button Text="C" TextColor="Red" Grid.Column="0"  Grid.Row="2"  Clicked="ClickedGrid"></Button>
