                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Text="C" TextColor="Red" Grid.Column="0"  Grid.Row="0"  Clicked="ClickedGrid"></Button>
            <Button Grid.Column="1"  Grid.Row="0" ></Button>
            <Button Text="C" TextColor="Red" Grid.Column="2"  Grid.Row="0"  Clicked="ClickedGrid"></Button>
